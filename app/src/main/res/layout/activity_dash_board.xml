<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DashBoardActivity">

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Please select Option to Move"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Analytics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Firebase Analytics"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_id"
        android:textSize="15dp" />
    <Button
        android:id="@+id/btn_Notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Firebase Notification"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Analytics"
        android:textSize="15dp" />
    <Button
        android:id="@+id/btn_Cashlytics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Firebase Crashlytics"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Notification"
        android:textSize="15dp" />

</android.support.constraint.ConstraintLayout>